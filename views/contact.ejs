<%- include('layout/header') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg p-4" style="border-radius: 15px; background-color: #ffebf0; border: 1px solid #f5c6cb;">
                <div class="text-center">
                    <h2 class="mb-3 text-dark">Contact Us</h2>
                    <p class="text-muted">Get in touch with us for any queries or support.</p>
                </div>

                <hr>

          

                <div class="mt-4">
                    <h4 class="text-dark">Our Office</h4>
                    <p class="text-muted">
                        📍 Knowledge park 3<br>
                        📞 +91 7079248804 <br>
                        📧 ourownvoice@gmail.com
                    </p>
                </div>

                <div class="mt-3">
                    <h4 class="text-dark">Send a Message</h4>
                    <form action="/contact" method="POST">
                        <div class="mb-3">
                            <label class="form-label text-dark">Your Name</label>
                            <input type="text" class="form-control" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-dark">Email Address</label>
                            <input type="email" class="form-control" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-dark">Message</label>
                            <textarea class="form-control" name="message" rows="4" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Send Message</button>
                    </form>
                </div>

                <div class="mt-4 text-center">
                    <a href="/" class="btn btn-secondary">Go to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
